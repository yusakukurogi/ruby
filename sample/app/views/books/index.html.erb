<p id="notice"><%= notice %></p>

<h1>登録されている書籍</h1>

<%= render 'search_form' %>

<table bgcolor="#e5f2ff" rules="all" bordercolor="#c0c0c0">
  <thead>
    <tr bgcolor="#add8e6">
      <th><%= link_to "書籍名", sort: "本の名前" %></th>
      <th><%= link_to "著者", sort: "著者" %></th>
      <th><%= link_to "出版社", sort: "出版社" %></th>
      <th colspan="3">メニュー</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.本の名前 %></td>
        <td bgcolor="#e5e5ff"><%= book.著者 %></td>
        <td><%= book.出版社 %></td>
        <td width="50" bgcolor="#e5ffe5"><%= link_to '詳細', book, class: "bluebtn" %></td>
        <td width="50" bgcolor="#ffffe5"><%= link_to '編集', edit_book_path(book), class: "bluebtn" %></td>
        <td width="50" bgcolor="#ffe5e5"><%= link_to '削除', book, class: "bluebtn", method: :delete, data: { confirm: '本を削除しますか？' } %></td>
      </tr>
    <% end %>
  </tbody>

</table>
<br>
<%= link_to '新しい書籍の追加', new_book_path, class: "bluebtn" %>

